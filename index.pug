doctype html
html
    head 
        link(rel="stylesheet" href="styles.css")
        script(src="public/server.js")
        script(src="public/app.js")
    body
        header#header-div
            div 
                h1#main-header IP Address Tracker
            div 
            div
                form#ip-input-container(action="/search" method="POST")
                    input#ip-input(type="text" name="ip" placeholder="Search for any IP address or domain")
                    button#submit-ip-button(type="submit") 
                        img#arrow-icon(src='./icon-arrow.svg' alt="arrow icon")
            div#info-div
                    ul  
                        li
                        h1.list-heading  IP ADDRESS
                            p #{ip.ip}
                        li
                        h1.list-heading  LOCATION
                            p #{ip.location.region}
                        li  
                        h1.list-heading  TIMEZONE
                            p #{ip.location.timezone}
                        li
                        h1.list-heading  ISP
                            p #{ip.isp}
        main    
            div#map
        footer.attribution 
            a(href="https://www.frontendmentor.io?ref=challenge" target="_blank") Frontend Mentor. Coded by
            a(href="https://www.frontendmentor.io/profile/timbosTours")
